<div class="row">
    <div class="col-9">
        <h2 class="text-center text-decoration-line-through">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control">
            <i class="fas fa-plus"></i> &nbsp; Add New Product
        </a>
    </div>
</div>
<div class="rounded container border m-2 p-2">
    <table id="tbldata" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts
{
    <script src="~/js/product.js"></script>
}
   